<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>

    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:lines">1</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/text_color_333333</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:background">@drawable/edit_back_view</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>



    <style name="Button.Dash">
        <item name="android:layout_height">@dimen/_55sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:background">@drawable/back_slot</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>



    <style name="TextView.Header">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>

    <style name="TextView.SubHeader">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="TextView.Regular">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="TextView.Small">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="TextView.Regular.Black">
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="TextView.Semibold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
    </style>

    <style name="MaterialText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#F1F1F1</item>
        <item name="boxStrokeWidth">2dp</item>

    </style>

    <style name="MaterialEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:lines">1</item>
        <item name="android:textColorHint">@color/text_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>



    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/top_cornered_shape</item>
    </style>

    <style name="DefaultAppBarLayout" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="elevation">0dp</item>
    </style>




    <style name="Button" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/_2sdp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonHollow" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/_2sdp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:background">@drawable/back_btn__hollow</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="NavigationTab" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/NavigationTabTextAppeareance</item>
    </style>

    <style name="NavigationTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BasePopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
    </style>

    <style name="MyTransparentBottomSheetDialogTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>
    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/customBottomSheetStyle</item>
    </style>

    <style name="customBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>
</resources>
